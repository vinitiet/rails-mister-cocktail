
<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= cl_image_path @cocktail.photo, height: 300, width: 400, crop: :scale %>) ;">


  <div class="banner-content">
    <h1>
      <%=  @cocktail.name %>
    </h1>
  </div>
</div>

<div class="wrapper">


  <div class="container">
    <div class="grid">
      <div class="grid-description">
        <h4>How to do it</h4>
        <p> <%= @cocktail.description %> </p>
      </div>

      <div class="grid-pic">
        <%=  cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
      </div>
      <div class="grid-ingredients">
        <h4>
          Ingredients list
        </h4>

        <ul class="list-group">
          <% @cocktail.doses.each do |dose| %>
          <li class="list-group-item justify-content-between">
            <%=  dose.ingredient.name %>
            <span class="badge badge-default badge-pill"><%= dose.description %>
            </span>
            <span class="text-black">
              <%=  link_to dose_path(dose), method: :delete do %>
              <i class="fa fa-trash"></i>
              <% end %>
            </span>
          </li>
          <% end %>
        </ul>
      </div>

      <div class="grid-addingredient">

        <h4>Add a new ingredient</h4>


        <%= simple_form_for [@cocktail, @dose] do |f| %>
        <%= f.input :description %>
        <%= f.association :ingredient %>
        <%= f.submit "add dose", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>

  </div>
</div>
