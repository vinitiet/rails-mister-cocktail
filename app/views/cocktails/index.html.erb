
<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= image_path('banner.jpg') %>) ;">

  <div class="banner-content">
    <h1>Cocktail night</h1>
  </div>
</div>
<div class="wrapper">

  <div class="container text-center">


    <h1>Your cocktail list</h1>

    <div class="row">
      <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
        <% unless cocktail.photo.blank? %>

          <% p cocktail.photo %>
        <div class="card" data-aos="fade-right" " style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%=
        cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>);">
        <% else %>
        <p>Ca a merd√©</p>
        <div class="card" data-aos="fade-right" style="background-color: grey">
        <% end %>
        <div class="card-description">
          <%= link_to cocktail_path(cocktail) do %>
          <h2>      <%= cocktail.name  %> </h2>
          <% end %>
        </div>
        ,     <div class="card-links">

          <p><%= link_to "Delete", cocktail_path(cocktail), class: "text-danger", method: :delete %></p>
        </div>
      </div>

    </div>
    <% end %>
  </div>
</div>
</div>



